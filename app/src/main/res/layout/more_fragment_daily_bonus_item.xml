<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_daily_bonus_item"
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="@drawable/drawable_daily_bonus_item_unselect"
        app:layout_auto_basewidth="height">

        <ImageView
            android:id="@+id/iv_daily_bonus_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:src="@mipmap/icon_daliy_bonus" />

        <TextView
            android:id="@+id/tv_get_coins_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/more_fragment_daily_bonus_num"
            android:textColor="@color/splash_app_title"
            android:textSize="@dimen/daily_bonus_num" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15px"
            android:src="@mipmap/daily_bonus_selected" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_daily_bonus_coins"
            android:layout_centerHorizontal="true"
            android:text="@string/more_fragment_daily_day"
            android:textColor="@color/splash_app_title"
            android:layout_marginTop="30px"
            android:textSize="@dimen/daily_bonus_day" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>